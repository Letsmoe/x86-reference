{
  "extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"],
			"#layouts/*": ["./src/layouts/*"],
			"#components/*": ["./src/components/*"],
			"#style/*": ["./src/style/*"],
			"#utils/*": ["./src/utils/*"],
			"#lib/*": ["./src/lib/*"],
		}
	},
	"include": ["src/**/*"]
}