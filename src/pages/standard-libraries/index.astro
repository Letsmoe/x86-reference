---
import OverviewCard from "#components/OverviewCard.svelte";
import StdlibLayout from "#layouts/StdlibLayout.astro";
---

<StdlibLayout title="Standard Library" listOfTitles={[]}>
	<div class="py-16">
		<div class="max-w-screen-xl mx-auto px-8">
			<h1 class="text-4xl md:text-6xl font-extrabold">
				Standard Library
			</h1>
			<p>
				Welcome to our standard library pages. A collection of system
				relevant functions included in our languages standard
				distributions.
			</p>
		</div>

		<div
			class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 px-8"
		>
			<OverviewCard
				title="math"
				description="Standard library header containing advanced mathematical functions and constants."
				href="/standard-libraries/math"
			/>
			<OverviewCard
				title="alloc"
				description="Basic memory allocation handlers."
				href="/standard-libraries/alloc"
			/>
			<OverviewCard
				title="io"
				description="Standard library for input-output applications."
				href="/standard-libraries/io"
			/>
		</div>
	</div>
</StdlibLayout>
